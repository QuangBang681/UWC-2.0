    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="./img/logo.png" alt="System logo">
            </div>

            <ul class="list-unstyled components">
                <div id="profile-container">
                    <i class="bi bi-person-circle"></i>
                    <p class="username">Admin</p>
                    <p class="email">@admin</p>
                </div>
                <li>
                    <div class="{{#if taskActive}} active {{/if}}">
                        <a href="/task">
                            <i class="bi bi-briefcase-fill"></i>
                            <span>Ca làm việc</span>
                        </a>
                    </div>
                    
                </li>
                <li>
                    <div class="{{#if employeeActive}} active {{/if}}">
                        <a href="/employee">
                            <i class="bi bi-person-square"></i>
                            <span>Nhân viên</span>
                        </a>
                    </div>
                </li>
                <li>
                    <div class="{{#if vehicleActive}} active {{/if}}">
                        <a href="/vehicle">
                            <i class="bi bi-truck"></i>
                            <span>Phương tiện</span>
                        </a>
                    </div>
                </li>
                <li>
                    <div class="{{#if mapActive}} active {{/if}}">
                        <a href="/map">
                            <i class="bi bi-geo-alt-fill"></i>
                            <span>Điểm thu gom</span>
                        </a>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm" aria-label="Search">
                </form>
                {{!-- <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    </div>
                </div> --}}
            </nav>

            {{{ body }}}
        </div>
    </div>


</body>
</html>